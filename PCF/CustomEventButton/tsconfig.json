{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "typeRoots": ["node_modules/@types"],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    }
}
